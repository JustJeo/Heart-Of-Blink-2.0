<!-- Game Play Page -->
<h1>Do you have the heart of a Blink?</h1>
<h3>Answer the 10 questions below and see how you did!</h3>
<h2>Song: "<%= song.songTitle %>"</h2>

<div class="songForm">
  <form id="questionForm" action="/results/<%- song.id %>" method="POST">
    <% for(let i = 0; i < 10; i++) { %>
      <div class="questions">
          <label><%= lyrics[i].questionMessage %></label>
          <input class = "inputBox" name="lyric<%= lyrics[i].id %>" id="playerAnswer" type="text">
      </div>  
    <% } %>
    <button type="submit" class="btn btn-dark">Submit Answers</button>
  </form>
</div>